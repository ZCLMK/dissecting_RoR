<h1>Create a new showcase item</h1>

<%= form_for(@showcase_item) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

    <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>
<ul>
  <!-- reliÃ© par le model Showcase (accepts nested attributes for : technologies) -->
  <%= form.fields_for :technologies do |technology_form|%>
  <li>
    <%= technology_form.label :name %>
    <%= technology_form.text_field :name %>
  </li>
<% end %>
</ul>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
